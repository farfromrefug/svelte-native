{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
      "declaration": true,
      "declarationDir": "./dist",
      "module": "esnext",
      "noImplicitAny": true,
      "outDir": "./dist",
      "target": "es2017",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": false,
      "esModuleInterop": false,   
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules"]
  }